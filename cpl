echo "#include <GL/gl.h>" > shaders.hh
xxd -i vert.glsl >> shaders.hh
echo "" >> shaders.hh
xxd -i frag.glsl >> shaders.hh
xxd -i geometry.glsl >> shaders.hh
xxd -i tesselationCtrl.glsl >> shaders.hh
xxd -i tesselationEval.glsl >> shaders.hh
sed -i 's/char/const GLchar/g' shaders.hh
sed -i 's/int/const GLint/g' shaders.hh
sed -i 's/unsigned//g' shaders.hh

clang++ main.cpp -lglfw -lGLEW -lGL -lX11 -lpthread -lXrandr -lXi -std=c++0x -o demo -O3 -flto=thin -fuse-ld=gold -DGLFW_MODE
#clang++ main.cpp -lSDL -lGLEW -lGL -lX11 -lpthread -lXrandr -lXi -std=c++0x -o demo -O3 -flto=thin -fuse-ld=gold -DSDL12_MODE
#clang++ main.cpp -lSDL2 -lGLEW -lGL -lX11 -lpthread -lXrandr -lXi -std=c++0x -o demo -O3 -flto=thin -fuse-ld=gold -DSDL2_MODE
#sstrip demo
